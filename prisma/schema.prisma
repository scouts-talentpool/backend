// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator entities {
  provider               = "prisma-class-generator"
  dryRun                 = false
  seperateRelationFields = true
  output                 = "../src/_gen/entities"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Berechtigung {
  id          Int     @id @default(autoincrement())
  bezeichnung String
  rollen      Rolle[]

  @@map("berechtigungen")
}

model Rolle {
  id             Int            @id @default(autoincrement())
  bezeichnung    String
  berechtigungen Berechtigung[]
  benutzer       Benutzer[]

  @@map("rollen")
}

model Benutzer {
  id       Int    @id @default(autoincrement())
  authId   String @unique
  rolle    Rolle  @relation(fields: [rolleId], references: [id])
  rolleId  Int
  talent   Talent @relation(fields: [talentId], references: [id])
  talentId Int
  firma    Firma  @relation(fields: [firmaId], references: [id])
  firmaId  Int


  @@map("benutzer")
}

model Talent {
  id           Int         @id @default(autoincrement())
  vorname      String
  nachname     String
  plz          Int
  wohnort      String
  lehrbeginn   DateTime
  campus       Campus      @relation(fields: [campusId], references: [id])
  campusId     Int
  wunschberufe Lehrberuf[]
  benutzer     Benutzer[]

  @@map("talente")
}

model Campus {
  id          Int      @id @default(autoincrement())
  bezeichnung String
  standort    String
  talente     Talent[]

  @@map("campus")
}

model Lehrberuf {
  id          Int          @id @default(autoincrement())
  bezeichnung String
  talente     Talent[]
  lehrstellen Lehrstelle[]

  @@map("lehrberufe")
}

model Firma {
  id             Int          @id @default(autoincrement())
  firmenname     String
  website        String
  strasse        String
  plz            Int
  ort            String
  firmenportrait String
  lehrstellen    Lehrstelle[]
  benutzer       Benutzer[]

  @@map("mitgliederfirmen")
}

model Lehrstelle {
  id            Int       @id @default(autoincrement())
  startjahr     DateTime
  stellenanzahl Int       @default(1)
  firma         Firma     @relation(fields: [firmaId], references: [id])
  firmaId       Int
  lehrberuf     Lehrberuf @relation(fields: [lehrberufId], references: [id])
  lehrberufId   Int

  @@map("lehrstellen")
}
